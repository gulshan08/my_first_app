<% if @errors && @errors.present? %>
 <script type="text/javascript">
   <% @errors.full_messages.each do |msg| %>
     toastr.error('<%= msg %>')
   <% end %>
 </script>
<% end %>

<% unless flash.empty? %>
 <script type="text/javascript">
   <% flash.each do |f| %>
     <% type = f[0].to_s.gsub('alert', 'error').gsub('notice', 'info') %>
     toastr['<%= type %>']('<%= f[1] %>')
   <% end %>
 </script>
<% end %>